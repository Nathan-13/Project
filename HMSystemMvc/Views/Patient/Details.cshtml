@model HMSystem.Models.Patient

<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Patient Identification</dt>
        <dd class="col-sm-9">@Model.PatientId</dd>

        <dt class="col-sm-3">Date of Birth</dt>
        <dd class="col-sm-9">@Model.DateOfBirth</dd>

        <dt class="col-sm-3">Gender</dt>
        <dd class="col-sm-9">@Model.Gender</dd>

        <dt class="col-sm-3">Phone number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Is Checked Out</dt>
        <dd class="col-sm-9">@Model.IsCheckedOut</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Admission Date</dt>
        <dd class="col-sm-9">@Model.DateAdmitted</dd>

        <dt class="col-sm-3">Medication Fee</dt>
        <dd class="col-sm-9">@Model.MedicationFees</dd>

        <dt class="col-sm-3">Laboratory Fee</dt>
        <dd class="col-sm-9">@Model.LabFees</dd>

        <dt class="col-sm-3">Rehabilitation Fee</dt>
        <dd class="col-sm-9">@Model.RehabFees</dd>

    </dl>
    <hr/>
</div>
@if (!Model.IsCheckedOut) {
    <div>
        <a class="btn btn-success" asp-controller="Bill" asp-action="Create" asp-route-id="@Model.PatientId">Checkout</a>
    </div>
    <br/>
}
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-patientId="@Model.PatientId">Edit Patient</a>
    <a class="btn btn-primary" asp-action="Index">View Patients</a>
</div>
