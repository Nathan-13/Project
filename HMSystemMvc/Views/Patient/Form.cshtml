@model PatientViewModel

@{
    string pageTitle = "Add Patient";
    string action = "Create";

    if(ViewBag.IsEditing == true) {
        pageTitle = "Update Patient Info";
        action = "Update";
    }
}

<div>
    <h2>@pageTitle</h2>
    <hr/>
      <div>
        <form asp-action="@action">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="FirstName">First Name</label>
                    <input type="text" class="form-control" id="FirstName">
                </div>
                <div class="form-group col-md-6">
                    <label for="LastName">Last Name</label>
                    <input type="password" class="form-control" id="LastName">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="DateOfBirth">Date of Birth</label>
                    <input class="form-control" type="date" value="2011-08-19" id="DateOfBirth">
                </div>
                <div class="form-group col-md-4">
                    <label for="PatientSex">Gender</label>
                    <select id="PatientSex" class="form-control">
                        <option selected>Choose...</option>
                        <option value="1">F</option>
                        <option value="2">M</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="PhoneNumber">Phone Number</label>
                    <input class="form-control" type="tel" value="1-(555)-555-5555" id="PhoneNumber">
                </div>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" placeholder="20 Rush Street, Arlington, London NW1 EE4">
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="DateAdmitted">Admission Date</label>
                    <input class="form-control" type="date" value="2011-08-19" id="DateAdmitted">
                </div>
                <div class="form-group col-md-3">
                    <label for="MedicationFees">Medication Fee</label>
                    <input type="text" class="form-control" id="MedicationFees" placeholder="0.00">
                </div>
                <div class="form-group col-md-3">
                    <label for="LabFees">Laboratory Fee</label>
                    <input type="password" class="form-control" id="LabFees" placeholder="0.00">
                </div>
                <div class="form-group col-md-3">
                    <label for="RehabFees">Rehabilitation Fee</label>
                    <input type="password" class="form-control" id="RehabFees" placeholder="0.00">
                </div>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a class="btn btn-primary" asp-action="Index">Patient List</a>
    </div>
</div>