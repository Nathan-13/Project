@model DoctorViewModel

@{
    string pageTitle = "Add Doctor";
    string action = "Create";

    if (ViewBag.IsEditing == true) {
        // Editing
        pageTitle = "Update Doctor Information";
        action = "Update";
    }
}

<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="FirstName">First Name</label>
                    <input type="text" class="form-control" id="FirstName">
                </div>
                <div class="form-group col-md-6">
                    <label for="LastName">Last Name</label>
                    <input type="password" class="form-control" id="LastName">
                </div>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" placeholder="20 Rush Street, Arlington, London NW1 EE4">
            </div>
            <div class="form-group">
                <label for="Specialty">Specialty</label>
                <input type="text" class="form-control" id="Specialty">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" placeholder="paul.painter@hlmclinic.org">
                </div>
                <div class="form-group col-md-6">
                    <label for="PhoneNumber">Phone Number</label>
                    <input type="text" class="form-control bfh-phone" data-format="+1 (ddd) ddd-dddd" value="13065734562" id="PhoneNumber">
                </div>
            </div>
            <div class="form-group">
                <label for="ImageUrl">Image Link</label>
                <input type="text" class="form-control" id="ImageUrl" placeholder="https://i.ibb.co/cxhV0p2/painter.jpg">
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a class="btn btn-primary" asp-action="Index">Our Doctors</a>
    </div>
</div>

