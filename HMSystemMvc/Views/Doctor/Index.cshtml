@model List<HMSystem.Models.Doctor>


<h2 style="text-align:left">Meet Our Practioners</h2> 
<br>
<style>
    p {
        text-align: center;
        font-size: 20px;
    }

    h4 {
        text-align: center;
    }

    a {
        text-align: center;
        font-size: 30px;
    }
</style>
<div class="row">
    @for (int i = 0; i < Model.Count; i++) {
        if (i % 3 == 0) {
            <div class="col-md-4">
                <div class="card">
                    <img src="@Model[i].ImageUrl" alt="@Model[i].FirstName" style="width:100%" height="300"/>
                    <div class="container">
                        <h4>@Model[i].FullName</h4>
                        <p>@Model[i].Specialty</p>
                        <p>@Model[i].Email</p>
                        <p>@Model[i].PhoneNumber</p>
                        <p><a class="btn btn-outline-dark" asp-action="Details" asp-route-doctorId="@Model[i].DoctorId">Details</a></p>
                    </div>
                </div>
            </div>
        }
    }
    @for (int i = 0; i < Model.Count; i++) {
        if (i % 3 != 0) {
            <div class="col-md-4">
                <div class="card">
                    <img src="@Model[i].ImageUrl" alt="@Model[i].FirstName" style="width:100%" height="300"/>
                    <div class="container">
                        <h4>@Model[i].FullName</h4>
                        <p>@Model[i].Specialty</p>
                        <p>@Model[i].Email</p>
                        <p>@Model[i].PhoneNumber</p>
                        <p><a class="btn btn-outline-dark" asp-action="Details" asp-route-doctorId="@Model[i].DoctorId">Details</a></p>
                    </div>
                </div>
            </div>
        }
    }
</div>
<br>
<div>
    <a class="btn btn-primary" asp-action="Form" >Add Doctor</a>
</div>

