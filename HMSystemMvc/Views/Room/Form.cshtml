@model RoomViewModel

@{
    string pageTitle = "Add Room";
    string action = "Create";

    if(ViewBag.IsEditing == true) {
        pageTitle = "Update Room Info";
        action = "Update";
    }
}

<div>
    <h2>@pageTitle</h2>
    <hr/>
      <div>
        <form asp-action="@action">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="RoomLocation">Room Location</label>
                    <input type="text" class="form-control" id="RoomLocation">
                </div>
                <div class="form-group col-md-6">
                    <label for="IsRoomBooked">Is Room Booked</label>
                    <select id="IsRoomBooked" class="form-control">
                        <option selected>Choose...</option>
                        <option value="1">True</option>
                        <option value="2">False</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="RoomStatus">Room Status</label>
                    <select id="RoomStatus" class="form-control">
                        <option selected>Choose...</option>
                        <option value="1">E</option>
                        <option value="2">O</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="RoomIsClean">Room Is Clean</label>
                    <select id="RoomIsClean" class="form-control">
                        <option selected>Choose...</option>
                        <option value="1">Y</option>
                        <option value="2">N</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <br/>
    <div>
        <a class="btn btn-primary" asp-action="Index">Room List</a>
    </div>
</div>